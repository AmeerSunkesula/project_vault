RewriteEngine On

# Handle user profile URLs
RewriteRule ^user/([0-9]+)/?$ user.php?id=$1 [L,QSA]
RewriteRule ^user/([a-zA-Z0-9_]+)/?$ user.php?username=$1 [L,QSA]

# Handle project detail URLs (if needed)
RewriteRule ^project/([0-9]+)/?$ ../project.php?id=$1 [L,QSA]

# Default to index.php for other requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]
